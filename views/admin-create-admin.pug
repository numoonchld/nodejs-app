

extends layout

//- this is the admin login page:

block content
  .card.p-5.container.bg-light
    
    h3.text-center.text-uppercase CREATE NEW ADMIN
    p.text-center (create a new admin account here)

    form#new-gym-form.my-3       
        .form-group
            label Username 
            input.form-control(type="text" name="username" required)
        
            //- small.form-text.text-muted (enter name of the new gym to be created)
        .form-group
            label Password
            input.form-control(type="password" name="password" required)
        
            //- small.form-text.text-muted (set initial number of climbing routes in new gym)
        button.btn.btn-success.btn-block.text-uppercase(type='submit') Create

    form.my-3(action="/admin", method="get")
        button.btn.btn-primary.btn-block.text-uppercase(type='submit') Back

    script
        include ../public/javascripts/new-admin-jQuery.js
