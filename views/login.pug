extends layout

//- this is the admin login page:

block content
  .card.p-5.container.bg-light
    
    h3.text-center= title
    //- p Welcome to #{title}
    p.text-center (submit your admin credentials)

    form.my-5(action='/admin', method='post')
      .form-group
        //- label Adminname:
        input.form-control(type='text' name='adminname' placeholder="login name" value="" required)
      .form-group
        //- label Password:
        input.form-control(type='password' name='password' placeholder="login password" value="" required)
      button.btn.btn-primary.btn-block.text-uppercase(type='submit') Submit

    hr

    form.my-5(action='/admin-create/admin', method='get')
      button.btn.btn-secondary.btn-block.text-uppercase(type='submit') New Account
      

  

